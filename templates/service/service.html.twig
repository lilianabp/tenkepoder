<section class="sec-block">
	<div class="fixed-bg bg4"></div>
	<h2 class="page-number">02.</h2>
	<div class="container">
		<div class="section-head">
			<div class="main-banner-text title-hd wow fadeInUp" data-wow-delay="300ms">
				<span>portfolio</span>
				<h1>{% trans %}Proyectos relacionados {% endtrans %}<span></span></h1>
				<p class="bdy">{% trans %}Siempre tratamos de implementar nuestros proyectos al más alto nivel. Puedes verlo en nuestro portfolio.{% endtrans %}</p>
			</div><!--title-hd end-->
			<a href="{{ path('projects') }}" title="" class="btn-default2">{% trans %}Ver todos los proyectos{% endtrans %}<img src="{{ asset('images/icon4.svg') }}" alt=""></a>
			<div class="clearfix"></div>
		</div>
		<div class="pft-items">
			<div class="row">
				{% for project in service.projects %}
					<div class="col-lg-4 col-md-6 col-sm-6 col-12">
						<div class="pft-item wow fadeInUp" data-wow-delay="300ms">
							<img src="{% path project.image, 'reference' %}" alt="TKP - {{ project.name }}">
							<div class="figcaption">
								<h2><a href="{{ path('project', {slug: project.slug}) }}" title="">{{ project.name }}</a></h2>
								<a href="{{ path('project', {slug: project.slug}) }}" title=""><img src="{{ asset('images/icon9.svg') }}" alt=""></a>
							</div><!--figcaption end-->
						</div><!--pft-item end-->
					</div>
				{% endfor %}
			</div>
		</div><!--pft-items end-->
	</div>
</section><!--case-studies-section end-->
{% endblock %}