{% extends 'base.html.twig' %}

{% block title %}Ten Ke Poder{% endblock %}

{% block content %}
<section class="pager-sec text-right pb-75 bg-0">
	<div class="container-fluid">
		<ul>
			<li><a href="{{ path('home') }}" title="">{% trans %}Inicio{% endtrans %}</a></li>
			<li><a href="{{ path('projects') }}" title="">{% trans %}Proyectos{% endtrans %}</a></li>
			<li><span>{{ project.name }}</span></li>
		</ul>
	</div>
</section><!--pager-sec end-->

<section class="cases-section black-bg">
	<div class="page-content">
		<div class="fixed-bg bg7"></div>
		<h2 class="page-number">01.</h2>
		<div class="container">
			<div class="main-banner-text mw-100 title-hd wow fadeInUp mgb-100" data-wow-delay="300ms">
				<span>portfolio</span>
				<h1>{{ project.name }}</h1>
			</div><!--title-hd end-->
			<div class="case-work-page">
				<div class="case-thumbnail">
					{% for image in project.gallery.galleryHasMedias %}
						<img src="{% path image.media, 'reference' %}" alt="{{ project.slug }}" class="">
					{% endfor %}
				</div><!--case-thumbnail end-->
				<div class="case-content">
					<h3>{% trans %}Sobre el proyecto{% endtrans %}</h3>
					{% if app.request.locale == 'es' %}{{ project.description|raw}}{% else %}{{ project.descriptionEn|raw}}{% endif %}
					<ul class="mg-list">
						<li>
							<h3>{% trans %}Cliente:{% endtrans %}</h3>
							<span>{{ project.client }}</span>
						</li>
						<li>
							<h3>{% trans %}Fecha de Inicio:{% endtrans %}</h3>
							{% if app.request.locale == 'es' %}
								<span>{{ project.startDate|date("d/m/Y") }}</span>
							{% else %}
								<span>{{ project.startDate|date("m/d/Y") }}</span>
							{% endif %}
						</li>
						<li>
							<h3>{% trans %}Categor√≠as:{% endtrans %}</h3>
							{% for category in project.category|filter(v => v.enabled )  %}
								<span>#{{ category.name }}</span>
							{% endfor %}
						</li>
						<li>
							<h3>{% trans %}Fecha de Fin:{% endtrans %}</h3>
							{% if app.request.locale == 'es' %}
								<span>{{ project.finishDate|date("d/m/Y") }}</span>
							{% else %}
								<span>{{ project.finishDate|date("m/d/Y") }}</span>
							{% endif %}
						</li>
					</ul>
					<div class="clearfix"></div>
					<a href="{{ project.webUrl}}" title="" class="btn-default" target="_blank">{% trans %}Visitar web{% endtrans %}</a>
				</div><!--case-content end-->
			</div><!--case-work-page end-->
		</div>
	</div><!--about-in-details end-->
</section><!--about_us_section end-->

