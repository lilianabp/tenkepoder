{% extends 'base.html.twig' %}

{% block title %}Ten Ke Poder{% endblock %}

{% block content %}
		<section class="pager-sec text-right dark-bg pb-75">
			<div class="container-fluid">
				<ul>
					<li><a href="{{ path('home') }}" title="">{% trans %}Inicio{% endtrans %}</a></li>
					<li><span>{% trans %}Proyectos{% endtrans %}</span></li>
				</ul>
			</div>
		</section><!--pager-sec end-->

		<section class="cases-section">
			<div class="page-content">
				<div class="fixed-bg bg7 bg-without-color"></div>
				<h2 class="page-number">01.</h2>
				<div class="container">
					<div class="main-banner-text title-hd wow fadeInUp mgb-100" data-wow-delay="300ms">
						<span>portfolio</span>
						<h1>{% trans %}Nuestros trabajos {% endtrans %}<span></span></h1>
						<p class="bdy">{% trans %}Hacemos todo tipo de trabajo digital, Prestashop, Wordpress, Woocommerce, PHP, Symfony, mantenimiento y modificaciones a medida de proyectos existentes, conexiones con API de terceros y desarrollo de API{% endtrans %}</p>
					</div><!--title-hd end-->
					<section class="options">
						<div class="option-isotop">
							<ul id="filter" class="option-set filters-nav" data-option-key="filter">
								<li><a data-option-value="*" class="selected">{% trans %}Todos{% endtrans %}</a></li>
								{% for category in categories|filter(v => v != 'default' ) %}
									<li><a data-option-value=".{{ category.name }}">{{ category.name }}</a></li>
								{% endfor %}
							</ul>
						</div>
					</section>
					<div class="masonary-layout">
						<div class="row">
							<div class="masonary">
								{% for project in projects %}
									{% set categories = '' %}
									{% for category in project.category %}
										{% if category.enabled %}
											{% set categories = categories~' '~category.name %}
										{% endif %}
									{% endfor %}
									<div class="col-lg-4 col-md-6 col-sm-6 pb-2 {{categories}}">
										<div class="tema-col">
											<img src="{% path project.image, 'reference' %}" alt="{{ project.slug }} {{ categories }}">
											<div class="team-caption">
												<h3><a href="{{ path('project', {slug: project.slug }) }}" title="{{project.name}}">{{ project.name }}</a></h3>
												<span></span>
												<a href="{{ path('project', {slug: project.slug }) }}" title="{{ project.slug }}" class=""><img src="{{ asset('images/arrow-right.svg')}}" alt="{{ project.slug }}"></a>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
							{# <div class="full-div w-100 text-center mt-70">
								<a href="#" title="" class="btn-default">Load more</a>
							</div> #}
						</div>
					</div><!--masonary-layout end-->
				</div>
			</div><!--about-in-details end-->
		</section><!--about_us_section end-->
{% endblock %}
