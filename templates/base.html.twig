    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/popper.js') }}" async></script>
    <script src="{{ asset('js/bootstrap.min.js') }}" async></script>
    <script src="{{ asset('js/plugin/slick.min.js') }}" async></script>
    <script src="{{ asset('js/plugin/html5lightbox.js') }}" async></script>
    <script src="{{ asset('js/plugin/isotope.js') }}" async></script>
    <script src="{{ asset('js/wow.min.js') }}" async></script>
    <script src="{{ asset('js/script.js') }}" async></script>
    <script type="text/javascript" async  defer>
    $(document).ready(function(){
        if(localStorage.getItem('page') == '{{ app.request.attributes.get('_route') }}') {
            $(window).scrollTop(localStorage.getItem('position'));
        }
        localStorage.clear();
        
        {% if app.request.locale == 'es' %}
            $('.es').addClass('active btn-default2');
            $('.en').removeClass('active btn-default2');
        {% else %}
            $('.en').addClass('active btn-default2');
            $('.es').removeClass('active btn-default2');
        {% endif %}

        var btn = $('#button');

        $(window).scroll(function() {
            localStorage.setItem('position', $(window).scrollTop());
            localStorage.setItem('page',  '{{ app.request.attributes.get('_route') }}');
            if ($(window).scrollTop() > 300) {
                btn.addClass('show');
            } else {
                btn.removeClass('show');
            }
        });

        btn.on('click', function(e) {
          e.preventDefault();
          $('html, body').animate({scrollTop:0}, '300');
        });
    });
    </script>
</body>
</html>